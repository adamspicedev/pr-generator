    "commander": "^11.1.0",
    "simple-git": "^3.22.0",
    "chalk": "^4.1.2",
    "inquirer": "^8.2.6",
    "mermaid": "^10.6.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/inquirer": "^8.2.10",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0"
  },
  "keywords": ["cli", "pull-request", "anthropic", "git"],
